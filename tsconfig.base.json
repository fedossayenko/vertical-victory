{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "paths": {
      "@vertical-victory/shared-types": ["./packages/shared-types/src"],
      "@vertical-victory/game-core": ["./packages/game-core/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
